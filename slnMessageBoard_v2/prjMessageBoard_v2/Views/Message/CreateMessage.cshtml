
@{
    ViewBag.Title = "新增留言";
}
<h2>新增留言</h2>
<hr />
<form method="post" action="@Url.Action("CreateMessage")" enctype="multipart/form-data" >
    <div>
        <h3>留言標題 <input type="text" name="title" maxlength="20" required /></h3>
        <div class="row">
            <div class="col-xs-1" style="width:105px">
                <h3>內容</h3>
            </div>
            <div class="col-xs-1">
                <textarea cols="50" rows="5" name="content" placeholder="此數輸入留言．．．(輸入上限為500字)"
                          maxlength="500" required></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1" style="width:105px">
                <br />
                上傳圖片
            </div>
            <br />
            <div class="col-xs-3">
                <input type="file" name="photo" />
            </div>
            <div class="col-xs-1">
                <input type="submit" value="確認送出" />
            </div>
        </div>
        <br />
        <p style="color:red">@ViewBag.Alert</p>
</form>
