
@{
    ViewBag.Title = "新增留言";
}
<h2>新增留言</h2>
<hr />
<form method="post" action="@Url.Action("CreateMessage")">
    <div>
        <h3>留言標題 <input type="text" name="Title" maxlength="20" required /></h3>
        <div class="row">
            <div class="col-lg-1">
                <h3>內容</h3>
            </div>
            <div class="col-lg-1">
                <textarea cols="50" rows="5" name="Content" placeholder="此數輸入留言．．．(輸入上限為500字)"
                          maxlength="500" required></textarea>
            </div>
        </div>
        <p><input type="submit" value="確認送出" /></p>
    </div>
</form>
